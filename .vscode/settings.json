{
    "json.schemas": [
        {
            "fileMatch": [
                "resource/tasks/**/*.json",
                "resource/global/**/resource/tasks/**/*.json",
            ],
            "url": "./docs/maa_tasks_schema.json"
        }
    ],
    "files.exclude": {
        "MaaDeps/vcpkg/buildtrees": true,
        "MaaDeps/vcpkg/packages": true
    },
    "files.associations": {
        "**/resource/tasks/**/*.json": "jsonc"
    },
    "C_Cpp.exclusionPolicy": "checkFilesAndFolders"
}
